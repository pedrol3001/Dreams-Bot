{
  "compilerOptions": {

    "target": "es2021",
    "module": "commonjs",

    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
      "@Error": ["Error/*"],
      "@Command": ["Error/*"]
    },

    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true

  }
}
