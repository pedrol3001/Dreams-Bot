{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
      "@error/*": ["shared/error/*"],
      "@config/*": ["config/*"],
      "@command/*": ["shared/infra/discord/command/*"],
      "@database/*": ["shared/infra/database/*"],
      "@discord/*": ["shared/infra/discord/*"],
      "@repositories/*": ["repositories/*"],
      "@guilds_repo/*": ["repositories/guild/*"],
      "@plugins_repo/*": ["repositories/plugin/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
