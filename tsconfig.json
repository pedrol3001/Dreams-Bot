{
  "compilerOptions": {

    "target": "es2021",
    "module": "commonjs",

    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
      "@error/*": ["error/*"],
      "@commands/*": ["commands/*"]
    },
    "outDir": "./dist",

    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true

  }
}
