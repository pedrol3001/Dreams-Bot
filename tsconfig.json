{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
      "@error/*": [
        "error/*"
      ],
      "@command/*": [
        "commands/*"
      ],
      "@database/*": [
        "database/*"
      ],
      "@repositories/*": [
        "repositories/*"
      ],
      "@guilds/*": [
        "repositories/guilds/*"
      ]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
