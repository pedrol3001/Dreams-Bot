{
  "compilerOptions": {
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "stripInternal": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "baseUrl": "./src/",

    "module": "commonjs",
    "target": "es2021",
    "outDir": "./dist/cjs",
    "lib": ["es2021"]
  },
  "include": ["../src/"]
}
