{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
      "@guild/*": ["repositories/guild/*"],
      "@plugin/*": ["repositories/plugin/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
